<h1>Listing bug_posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Status</th>
    <th>Img url</th>
    <th>Bug list</th>
    <th>Posted by</th>
    <th>Posted for</th>
    <th>Priority</th>
    <th>Category</th>
    <th>No of fixes</th>
    <th>No of tests</th>
    <th>Closed datetime</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bug_posts.each do |bug_post| %>
  <tr>
    <td><%= bug_post.title %></td>
    <td><%= bug_post.body %></td>
    <td><%= bug_post.status %></td>
    <td><%= bug_post.img_url %></td>
    <td><%= bug_post.bug_list.title %></td>
    <td><%= bug_post.posted_by.screen_name %></td>
    <td><%= bug_post.posted_for.screen_name %></td>
    <td><%= bug_post.priority %></td>
    <td><%= bug_post.bug_category.name %></td>
    <td><%= bug_post.no_of_fixes %></td>
    <td><%= bug_post.no_of_tests %></td>
    <td><%= bug_post.closed_datetime %></td>

  </tr>
<% end %>
</table>

